<form method="post" action="/albums/<%= @album.id %>">
  <label for="title">Title:</label>
  <input
  type="text"
  name="title"
  id="title"
  value="<%= @album.title %>"
  />

  <label for="artist_select">Select Artist:</label>
  <select name="artist_id" id="artist_select" selected="<%= @album.artist_id  %>">
    <% @artists.each do |artist| %>
    <% if artist.id == @album.artist_id %>
    <option value=<%= artist.id %> selected><%= artist.name %></option>
    <% else %>
    <option value=<%= artist.id %>><%= artist.name %></option>
    <% end %>
    <% end %>
  </select>

  <label for="label_select">Select Label:</label>
  <select name="label_id" id="label_select" selected="<%= @album.label_id  %>">
    <% @labels.each do |label| %>
    <% if label.id == @album.label_id %>
    <option value=<%= label.id %> selected><%= label.name %></option>
    <% else %>
    <option value=<%= label.id %>><%= label.name %></option>
    <% end %>
    <% end %>
  </select>

  <label for="genre">Genre:</label>
  <input
  type="text"
  name="genre"
  id="genre"
  value="<%= @album.genre %>"
  />

  <label for="quantity">Stock quantity:</label>
  <input
  type="number"
  name="stock_quantity"
  id="quantity"
  value="<%= @album.stock_quantity %>"
  />

  <label for="buying-cost">Buying cost:</label>
  <input
  type="number"
  name="buying_cost"
  id="buying-cost"
  min="0.50"
  value="<%= sprintf("%.2f", @album.buying_cost) %>"
  />

  <label for="selling-price">Selling price:</label>
  <input
  type="number"
  name="selling_price"
  id="selling-price"
  min="0.50"
  value="<%= sprintf("%.2f", @album.selling_price) %>"
  />


  <input type='submit' value="Edit album">
</form>
