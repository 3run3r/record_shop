<h1>New Album</h1>

<form action="/albums" method="post">
  <label>
  Select an artist:
    <select name="artist_id">
      <% for artist in @artists %>
      <option value="<%= artist.id %>"><%= artist.name %></option>
      <% end %>
    </select>
  </label>

  <label>
    Select a label:
    <select name="label_id">
      <% for label in @labels %>
      <option value="<%= label.id %>"><%= label.name %></option>
      <% end %>
    </select>
  </label>

  <label for="title">Album title:</label>
  <input type="text" name="title" id="title">

  <label for="genre">Genre:</label>
  <input type="text" name="genre" id="genre">

  <label for="quantity">Stock quantity:</label>
  <input type="number" min="1" name="stock_quantity" id="quantity">

  <label for="buying-cost">Buying cost:</label>
  <input type="number" min="1" name="buying_cost" id="buying-cost">

  <label for="selling-price">Selling price:</label>
  <input type="number" min="1" name="selling_price" id="selling-price">

  <input type='submit' value="Submit">
</form>
